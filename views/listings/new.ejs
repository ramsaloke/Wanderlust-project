<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <br><br>
        <h3>Create a New List</h3> <br>

        <form method="POST" action="/listings" novalidate class="needs-validation" >
            <div class="mb-3">
                <label for="title" class="form-label"> Title </label>
                <input name="listing[title]" placeholder="Add a title" type="text" class="form-control" required>
                <div class="valid-feedback">Title looks good</div>
                <div class="invalid-feedback">Title should valid</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label"> Description </label>
                <textarea name="listing[description]" type="text" class="form-control" required></textarea>
                <div class="invalid-feedback">Description should valid</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label"> Image Link</label>
                <input name="listing[image][url]" placeholder="enter image URL/Link" type="text" class="form-control">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label"> Price </label>
                    <input name="listing[price]" placeholder="2000" type="number" class="form-control" required>
                    <div class="invalid-feedback">Price should valid</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label"> Country </label>
                    <input name="listing[country]" placeholder="india" type="text" class="form-control" required>
                    <div class="invalid-feedback">Country should valid</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label"> Location </label>
                <input name="listing[location]" placeholder="hyderabad" type="text" class="form-control" required>
                <div class="invalid-feedback">Location should valid</div>
            </div>
            <button class="btn btn-dark add-btn mt-3 mb-5" type="submit">Add</button>
        </form>
    </div>
</div>
