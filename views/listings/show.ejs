<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3 show-card">

    <h3>Listing Details :</h3> 
</div>
    <div class="card col-6 offset-3">

        <img src="<%= listing.image.url %>" class="card-img-top show" alt="listing_image">
        <div class="card-body">
          <p class="card-text"> <b><%= listing.title %> </b> <br>
            <%= listing.description %> <br>
            <% if (listing.price !== null && listing.price !== undefined) { %>
                &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
            <% } else { %>
                Price not available <br>
            <% } %>
            <%= listing.location %> <br>
            <%= listing.country %>
        
        </p>
        </div>
    </div>
  
    <br><br>
    <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark offset-3 col-1 mb-3 edit-btn">Edit </a>
    <br><br>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
    </form>
</div>
</div>
